<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/linear_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="LinearLayoutManager" />

        <Button
            android:id="@+id/grid_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:padding="20dp"
            android:text="GridLayoutManager" />

        <Button
            android:id="@+id/stagger_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="StaggeredGridLayoutManager" />

        <Button
            android:id="@+id/diff_item_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="加载不同item类型" />


        <Button
            android:id="@+id/custom_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="CustomLayoutManager" />

        <Button
            android:id="@+id/recycled_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="回收复用的LayoutManager" />

        <Button
            android:id="@+id/first_remould_recycled_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="第一次改造LayoutManager" />

        <Button
            android:id="@+id/second_remould_recycled_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="第二次改造LayoutManager" />

        <Button
            android:id="@+id/linear_item_touch_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="垂直列表ItemTouchHelper" />

        <Button
            android:id="@+id/grid_item_touch_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="GridItemTo布局的ItemTouchHelper" />

        <Button
            android:id="@+id/btn_item_touch_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="带滑动按钮的列表" />

        <Button
            android:id="@+id/btn_qq_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="仿QQ滑动删除效果" />

        <Button
            android:id="@+id/snap_helper_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SnapHelper使用"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/start_snap_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StartSnap使用"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/snap_helper_vertical_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全屏PagerSnap使用"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/cover_flow_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerView画廊"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/cover_flow_btn_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerView画廊定义绘制顺序"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/cover_flow_btn_3d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerView画廊，3D效果"
            android:textAllCaps="false"
            android:padding="20dp"/>

        <Button
            android:id="@+id/cover_flow_btn_new_3d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerView画廊定义绘制顺序,3D效果"
            android:textAllCaps="false"
            android:padding="20dp"/>
    </LinearLayout>

</ScrollView>

