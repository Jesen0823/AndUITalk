<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeView">
        <attr name="mvAnimDuration" format="integer" />
        <attr name="mvDirection" format="string" />
        <attr name="mvInterval" format="integer" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvTextColor" format="color" />
        <attr name="mvTextSize" format="integer" />
    </declare-styleable>

    <declare-styleable name="RippleAnimationView">
        <attr name="ripple_anim_color" format="color" />
        <attr name="ripple_anim_type" format="enum">
            <enum name="fillRipple" value="0" />
            <enum name="strokeRipple" value="1" />
        </attr>
        <attr name="radius" format="integer" />
        <attr name="strokWidth" format="integer" />
        <attr name="rippleNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PayResultView">
        <attr name="paying_color" format="color"/>
        <attr name="paying_stroke" format="integer"/>
        <attr name="paying_dur" format="integer"/>
        <attr name="result_dur" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SimpleRatingBar">
        <attr name="android:entries" />
        <attr name="android:textSize" />
        <attr name="srb_borderColor" format="color" />
        <attr name="srb_fillColor" format="color" />
        <attr name="srb_backgroundColor" format="color" />
        <attr name="srb_starBackgroundColor" format="color" />
        <attr name="srb_pressedBorderColor" format="color" />
        <attr name="srb_pressedFillColor" format="color" />
        <attr name="srb_pressedBackgroundColor" format="color" />
        <attr name="srb_pressedStarBackgroundColor" format="color" />
        <attr name="srb_numberOfStars" format="integer" />
        <attr name="srb_starSize" format="dimension" />
        <attr name="srb_maxStarSize" format="dimension" />
        <attr name="srb_starsSeparation" format="dimension" />
        <attr name="srb_starBorderWidth" format="float" />
        <attr name="srb_starCornerRadius" format="float" />
        <attr name="srb_isIndicator" format="boolean" />
        <attr name="srb_rating" format="float" />
        <attr name="srb_stepSize" format="float" />
        <attr name="srb_drawBorderEnabled" format="boolean" />
        <attr name="srb_bottomTextColor" format="color" />
        <attr name="srb_bottomTextPadding" format="dimension" />
        <attr name="srb_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="RectView">
        <attr name="rect_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="CombTitleBar">
        <attr name="icon_tint" format="color"/>
        <attr name="title_color" format="color"/>
        <attr name="title_background_color" format="color"/>
        <attr name="title_text" format="string"/>
    </declare-styleable>
</resources>